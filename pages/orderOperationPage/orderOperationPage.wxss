/*********row-2**********************start**************/

.row-2 {
  border-bottom: 2rpx solid #ccc;
  margin-top: 40rpx;
  margin-bottom: 120rpx;
}

.row-2 .header {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
  align-items: center;
  background-color: #fff;
}

.row-2 .header .des {
  font-weight: 700;
}

.row-2 .add-product-btn {
  display: flex;
  justify-content: flex-end;
}

.row-2 .add-product-btn button {
  width: 40%;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  margin: 0 0 10px 0;
}

.row-2 .product-box {
  margin-top: 10rpx;
  background-color: #fff;
}

.row-2 .form-item.first {
  margin-bottom: 20rpx;
  position: relative;
}

.row-2 .form-item.first .btn-reject {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* width: 112rpx; */
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}
.row-2 .form-item.first .btn-productDetail {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* width: 112rpx; */
  position: absolute;
  right: 150rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.row-2 .item-a {
  height: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  line-height: 40rpx;
  padding: 0 20rpx;
}

.row-2 .item-a .value {
  background-color: #fbfbfb;
  border: 2rpx solid #ccc;
  width: 500rpx;
  height: 50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}

.row-2 .item-a .suggest-value-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.row-2 .item-a .suggest-value-list .suggestion-box {
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  position: relative;
  margin: 5px 0;
  -webkit-box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  border: 1px solid #e4e7ed;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
}

.row-2 .item-a .suggest-value-list .suggestion-box .tag {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 30rpx;
}

/*********row-2**********************end**************/

/*table********start**********/

.table {
  margin-bottom: 20rpx;
}

.tr.header {
  display: flex;
  width: 100%;
  height: 60rpx;
  justify-content: flex-start;
  background-color: #ebebeb;
  padding: 0;
}

.tr.header .th {
  line-height: 60rpx;
}

.th {
  height: 100%;
  text-align: center;
  color: black;
  word-wrap: break-word;
  word-break: normal;
}

.th.item-1 {
  width: 20%;
}

.th.item-2 {
  width: 30%;
}

.th.item-3 {
  width: 20%;
}

.th.item-4 {
  width: 30%;
}

.table .body {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}

.tr.body {
  height: 60rpx;
  width: 50%;
}

.tr.body:nth-child(2n+1) {
  border-right: 2rpx solid #ccc;
}

.tr.body .td {
  height: 100%;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.tr.body .td.item-1 {
  width: 40%;
}

.tr.body .td.item-2 {
  width: 60%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.tr.body .td.item-2 input {
  color: #d4787e;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  height: 40rpx;
}

.tr.footer {
  display: flex;
  width: 100%;
  height: 60rpx;
  background-color: #ebebeb;
  justify-content: flex-start;
}

.tr.footer .td {
  height: 100%;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
}

.tr.footer .td.td.item-1 {
  width: 40%;
}

.tr.footer .td.td.item-2 {
  width: 30%;
}

.tr.footer .td.td.item-3 {
  width: 30%;
}

.tr.footer .td.td.item-4 {
  width: 40%;
}

.tr.footer .td.td.item-5 {
  width: 60%;
}

/*table*********end***********/
