.box {
  padding: 0 30rpx;
}

.recommend_scroll_x_box {
  white-space: nowrap;
}

/*table********start**********/

.table {
  margin-bottom: 20rpx;
  white-space: nowrap;
  width: 100%;
}

.tr.header {
  display: flex;
  justify-content: flex-start;
  background-color: #ebebeb;
  align-items: center;
}

.th {
  height: 100%;
  text-align: center;
  color: black;
  /* word-wrap: break-word;
  word-break: normal; */
}

.th.item-1 {
  width: 15%;
}

.th.item-2 {
  width: 15%;
}

.th.item-3 {
  width: 23.3333%;
}

.th.item-4 {
  width: 23.3333%;
}

.th.item-5 {
  width: 23.3333%;
}

.slider {
  margin: 5px 18px;
}

.tr.body {
  display: flex;
  width: 100%;
  height: 60rpx;
  justify-content: flex-start;
}

.tr.body .td {
  height: 100%;
  line-height: 60rpx;
  text-align: center;
  border-right: 2rpx solid #ccc;
  font-size: 24rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.tr.body .td.item-1 {
  width: 15%;
}

.tr.body .td.item-2 {
  width: 15%;
}

.tr.body .td.item-3 {
  width: 23.3333%;
}

.tr.body .td.item-4 {
  width: 23.3333%;
}

.tr.body .td.item-5 {
  width: 23.3333%;
}

.tr.body .td.item-5 input {
  color: #d4787e;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 40rpx;
  margin-top: 5rpx;
}

.tr.footer {
  display: flex;
  width: 100%;
  height: 60rpx;
  justify-content: flex-start;
  background-color: #ebebeb;
}

.tr.footer .td {
  height: 100%;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
}

.tr.footer .td.td.item-1 {
  width: 30%;
}

.tr.footer .td.td.item-2 {
  width: 23.3333%;
}

.tr.footer .td.td.item-3 {
  width: 23.3333%;
}

.tr.footer .td.td.item-4 {
  width: 40%;
}

.tr.footer .td.td.item-5 {
  width: 60%;
}

/*table*********end***********/

.btn-box {
  display: flex;
  justify-content: center;
}

.btn-box .entry {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  background-color: #dc5460;
  font-size: 24rpx;
}
