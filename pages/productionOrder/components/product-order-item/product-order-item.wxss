/*product************start******/

.item {
  display: flex;
  width: 100%;
  overflow: hidden;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.item .row-1 {
  width: 100%;
  margin: 20rpx 0 10rpx 0;
  display: flex;
}

.item .row-1 .item-a {
  padding: 0 10rpx;
  line-height: 30px;
}

.item .row-1 .item-a .value {
  font-weight: 700;
}

.item .row-1 .btn {
  font-size: 28rpx;
  padding: 0 10px;
  height: 30px;
  line-height: 30px;
}

.item .row-2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 2rpx dashed #ccc;
  padding-bottom: 10rpx;
}

.item .row-2 .tags {
  padding: 0 10rpx;
}

.item .row-2 .tags .key {
  font-size: 24rpx;
}

.item .row-2 .tags .value {
  font-size: 24rpx;
  font-weight: 700;
}

.item .img {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
}

.item .product-info {
  height: 100%;
  width: 100%;
  overflow: hidden;
  flex: 2;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.item .product-info .global {
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
}

.item .product-info .item-1 {
  /* width: 50%; */
}

.item .product-info .item-2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
}

.item .product-info .item-2 .a {
  font-size: 24rpx;
}

.item .product-info .item-2 .b {
  width: 80%;
  color: #c7333f;
}

.item .product-info .item-3 {
  width: 100%;
}

.item .product-info .item-4 {
  /* width: 50%; */
}

.item .product-info .item-5 {
  width: 100%;
}

.item .product-info .item-6 {
  width: 100%;
}

.item .product-info .item-7 {
  background-color: #d4787e;
}

.item .product-info .key {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.item .product-info .value {
  font-size: 24rpx;
  font-weight: 700;
}

.item .product-info .item-2 .key {
  color: #d4787e;
}

.item .product-info .item-2 .value {
  color: #d4787e;
}

/*product************end******/