/* pages/purchaseOrderSearch/purchaseOrderSearch.wxss */
.row {
  padding: 0 20rpx;
  background-color: #fff;
}

.value {
  background-color: #fbfbfb;
  border: 2rpx solid #ccc;
  width: 500rpx;
  height: 50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}
.value-a{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
}

.title {
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  line-height: 60rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
}

.item-a {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.row .item-a .key {
  font-size: 26rpx;
}

.row-1 {
  margin-bottom: 20rpx;
  overflow: hidden;
}

.row-1 .item-a {
  align-items: center;
  margin-bottom: 20rpx;
}

.row-2 {
  overflow: hidden;
  margin-bottom: 20rpx;
}

.row-2 .item-a{
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  line-height: 40rpx;
}

.row-2 .item-a .suggest-value-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.row-2 .item-a .suggest-value-list .suggestion-box {
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  position: relative;
  margin: 5px 0;
  -webkit-box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  border: 1px solid #e4e7ed;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
}

.row-2 .item-a .suggest-value-list .suggestion-box .tag  {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 30rpx;
}


.search-btn{}
.group {
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}