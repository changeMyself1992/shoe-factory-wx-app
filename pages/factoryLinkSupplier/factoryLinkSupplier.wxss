/* pages/factoryLinkSupplier/factoryLinkSupplier.wxss */

.row-2 {
  margin-top: 40rpx;
}

.row-2 .header {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #ccc;
  padding: 0 20rpx;
}

.row-2 .header .des {
  font-weight: 700;
}

.row-2 .add-product-btn {
  display: flex;
  justify-content: flex-end;
  padding: 0 10rpx;
  background-color: #ffffff;
  margin-bottom: 100rpx;
}

.row-2 .add-product-btn  .text-1 {
  font-size: 60rpx;
  color: #1296db;
  margin-right: 40rpx;
}

.supplier-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 96%;
  background-color: #fff;
  margin: 0 2%;
  padding: 10rpx;
  border: 1px dashed #cdcdcd;
}

.supplier-box .clear-box {
  width: 100%;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.supplier-box .clear-box .clear {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 140rpx;
  margin: 0;
}

.supplier-box .clear-box .label {
  font-weight: 700;
}

.supplier-box .item-supplier {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  align-items: center;
}
.supplier-box .item-supplier.item-b {
  width: 100%;
  flex-wrap: wrap;
}
.supplier-box .item-supplier.item-b .value {
  width: 65%;
}

.supplier-box .item-supplier.item-a {
  width: 48%;
}

.supplier-box .item-supplier.textarea {
  width: 100%;
}

.supplier-box .item-supplier .key {
  font-size: 28rpx;
  white-space: nowrap;
  margin-left: 20rpx;
}

.supplier-box .item-supplier .value {
  height: 60rpx;
  border: 2rpx solid #ccc;
  font-size: 28rpx;
  padding-left: 5px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 5rpx;
}

.supplier-box .item-supplier.textarea .value {
  height: 75rpx;
}

/*********row-2**********************end**************/

.item-supplier.item-a {
  width: 100%;
}
.sumPrice{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 10rpx auto;
  font-size: 32rpx;
  /* margin-bottom: 100rpx; */
}
/*********suggest-value-list*******************start*************************/

.suggest-value-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.suggest-value-list .suggestion-box {
  width: 65%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  position: relative;
  margin: 5px 0;
  -webkit-box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  border: 1px solid #e4e7ed;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
}

.suggest-value-list .suggestion-box .tag {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}

/*********suggest-value-list*******************end*************************/
