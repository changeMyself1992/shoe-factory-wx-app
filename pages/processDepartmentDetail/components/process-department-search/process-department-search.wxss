@import "../../../../static/wxss/font1.wxss";

.module-a {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.module-a .picker {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding: 0rpx 10rpx 0rpx 10rpx;
  border-radius: 20rpx;
}

.module-a .picker .text-a {
  font-size: 24rpx;
  line-height: 24rpx;
}

.module-a .picker .text-b {
  font-size: 24rpx;
  font-weight: 700;
  line-height: 24rpx;
}

.module-a .picker .text-c {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
}

/********shaixuan-box******************start****************/

.header {
}

.header .title {
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  line-height: 60rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}

.row {
  padding: 0 20rpx;
  background-color: #fff;
}

.row  .title {
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  line-height: 60rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
}

.item-a {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.row .item-a .key {
  font-size: 26rpx;
}

.row .item-a .value {
  background-color: #fbfbfb;
  border: 2rpx solid #ccc;
  width: 500rpx;
  height: 50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}

.row .item-a .value-a {
  width: 500rpx;
}

.row .item-a .value-a .radio-group {
  display: flex;
}

.row .item-a .value-a .radio-group .radio {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}

.row-1 {
  margin-bottom: 20rpx;
  overflow: hidden;
}

.row-1 .item-a {
  align-items: center;
  margin-bottom: 20rpx;
}

.row-2 {
  overflow: hidden;
  margin-bottom: 20rpx;
}

.row-2 .item-a {
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  line-height: 40rpx;
}

.row-2 .item-a .suggest-value-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.row-2 .item-a .suggest-value-list .suggestion-box {
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  position: relative;
  margin: 5px 0;
  -webkit-box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  border: 1px solid #e4e7ed;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
}

.row-2 .item-a .suggest-value-list .suggestion-box .tag {
  width: 100%;
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 30rpx;
}

/********shaixuan-box******************end****************/

/********kind-list__item*******折叠面板***********start****************/

.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}

.weui-cells:before, .weui-cells:after {
  display: none;
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}

.weui-cell:before {
  right: 15px;
}

.kind-list__item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
}

.kind-list__item:first-child {
  margin-top: 0;
}

.kind-list__img {
  width: 21px;
  height: 11px;
}

.kind-list__item-hd {
  padding: 20px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
  display: flex;
  justify-content: space-between;
}

.kind-list__item-hd_show {
  opacity: 0.4;
}

.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list__item-bd_show {
  height: auto;
}

/********kind-list__item*******折叠面板***********end****************/
