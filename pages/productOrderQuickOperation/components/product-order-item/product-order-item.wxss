/*product************start******/

.item {
  display: flex;
  width: 100%;
  overflow: hidden;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.item .row-1 {
  width: 100%;
  margin: 20rpx 0 10rpx 0;
  position: relative;
}

.item .row-1 .item-a {
  padding: 0 10rpx;
}

.item .row-1 .btn {
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 119rpx;
  height: 56rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 56rpx;
  outline: none;
}
.item .row-1 .btnOn {
  background: #0da317;
}
.item .row-1 .btnOff {
  background: #cdcdcd;
}

.item .row-1 .item-a .value {
  font-weight: 700;
}

.item .row-1 .item-a .scdDetail {
  font-size: 26rpx;
  color: #4a4a4a;
  margin-left: 50rpx;
}

.item .row-2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 2rpx dashed #ccc;
  padding-bottom: 10rpx;
}

.item .row-2 .tags {
  padding: 0 10rpx;
}

.item .row-2 .tags .key {
  font-size: 24rpx;
}

.item .row-2 .tags .value {
  font-size: 24rpx;
  font-weight: 700;
}

.item .img {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
}

.item .product-info {
  width: 100%;
  flex: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  border-bottom: 2rpx dashed #ccc;
  padding-bottom: 10rpx;
}

.item .product-info .global {
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
}

.item .product-info .global1 {
  flex: 1;
  text-align: center;
}

