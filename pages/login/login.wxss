/* pages/login/login.wxss */

.container {}

page {
  background-color: #fff;
}

.login-box {
  padding: 0 45rpx;
  display: block;

}

.login-box .modul-a {
  height: 349rpx;
}

.login-box .modul-a .title {
  font-size: 50rpx;
  color: #000;
  margin-top: 23rpx;

}

.login-box .modul-a .weChat-login-btn {
  margin-top: 65rpx;

}

.login-box .card {
  box-shadow: 0 2px 7px 3px rgba(204, 204, 204, 0.50);
  border-radius: 6px;
  display: flex;
  flex-wrap: wrap;
  padding: 0 45rpx;
  padding-bottom: 64rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.login-box .card .card-title {
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
}

.login-box .card .phone {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #CDCDCD;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #4A4A4A;
}

.login-box .card .phoneCode {
  width: 100%;
  border-bottom: 2rpx solid #CDCDCD;
  position: relative;
}

.login-box .card .phoneCode input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #4A4A4A;
  width: 65%;
}

.login-box .card .phoneCode .phoneCodeBtn {
  position: absolute;
  color: #000;
  background-color: #fff;
  right: 0;
  width: 179rpx;
  height: 65rpx;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  line-height: 65rpx;
  border: 1px solid rgba(0, 0, 0, .2);
  border-radius: 8px;
  z-index: 100;
}

.login-box .card .phoneCode .phoneCodeBtn::after {
  content: none;
}

.login-box .card .phoneCode .phoneCodeBtn.cooling {
  color: #000;
  border: 1px solid rgba(0, 0, 0, .2);
}

.login-box .card .enterprises-list {
  margin-top: 20rpx;
}

.login-box .card .enterprises-list .radio-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.login-box .card .enterprises-list .radio-group .checkbox {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #CDCDCD;
  display: flex;
  align-items: center;
}

.login-box .card .enterprises-list .radio-group .checkbox .radio {
  zoom: .8;
}

.login-box .card .enterprises-list .radio-group .checkbox .name {
  color: #000;
}

.login-box .card .verifyBtn {
  background-color: #DC5460;
  width: 100%;
  font-size: 30rpx;
  color: #fff;
  margin-top: 20rpx;

}

.des {
  text-indent: 20px;
  padding: 0 45rpx;
  margin-top: 30px;
  font-weight: 700;
}