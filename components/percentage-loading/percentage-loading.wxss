.percentage-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
  display: inline-block;
  height: 130px;
  width: 80%;
}

.bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.8;
}

.progress {
  position: absolute;
  z-index: 999;
  width: 90%;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.img {
  width: 100rpx;
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
}
