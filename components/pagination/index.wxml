<view class='page-list'>

  <view class="list">
    <view class='page-list-cont'>
      <view class="page-top">
        <view class="page-top-a">
          当前页显示订单量
          <label style="color:#F8E71C;">{{page_size}}</label>
          个
        </view>
        <view class="page-top-a">
          总订单量
          <label style="color:#F8E71C;">{{total_count}}</label>
          个
        </view>
      </view>

      <view class='page-bottom'>
        <view class="page-bottom-x {{page_num===1?'page-bottom-x-disabled':''}}" catchtap='selectPage' data-id='0'>上一页</view>

        <view class="page-bottom-t">
          <text class="page_num">{{page_num}}</text>
          <text class="max_page">/{{max_page}}</text>
        </view>

        <view class="page-bottom-x {{page_num===max_page?'page-bottom-x-disabled':''}}" catchtap='selectPage' data-id='1'>下一页</view>
      </view>
    </view>
  </view>


</view>